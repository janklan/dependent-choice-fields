{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit">Submit</button>

        <hr>
        List of errors:<br>
        {{ form_errors(form) }}
    {{ form_end(form) }}

    <hr>

    {{ dump(errors ?? null) }}

    {% if success %}
        <div style="font-weight:bold;color:green">Form submitted</div>
    {% endif %}
{% endblock %}
